<div id="content">
	<div class="post">
		<h2 class="title">Products</h2>
		<div class="entry">
			<div id="box1">
				<h3 class="text1">Categories</h3>						

				<div id="categories">
					<% @categories.each do |category| %>
						<div class="category">
							<%= link_to(category_products_path(category)) do %>
								<%= image_tag "categories/#{category.name}.jpg" %>
								<div class="caption"><%= category.name %></div>
							<% end %>
						</div>
					<% end %>
				</div>			
			</div>
		</div>
	</div>
</div>
<div id="sidebar">
	<div id="box4">
		<h2>Contact Us</h2>
		<div class="content">
			<p>We represent many distributors and manufacturers and can provide discounts you can't find purchasing direct. Click below to request a quote.</p>
		
			<p><a href="<%= url_for '/contact' %>" class="link-style3"><span>Request a Quote</span></a></p>
		</div>
	</div>
	
	<div id="box5">
		<h2>Search Products</h2>
		<div class="content">	
			<div id="search">
				<%= form_tag('/productSearch') %>
					<%=text_field :main, :search, :class => 'searchInput' %>
					<%=image_submit_tag "homepage20.gif", :class => 'searchButton' %>
				</form>
			</div>
		</div>
	</div>
</div>
