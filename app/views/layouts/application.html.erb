<div id="wrapper-bg">
	<div id="wrapper-bgtop">
		<div id="wrapper-bgbtm">
			<div id="header" class="container">
				<div id="phone">(800) 307-3518</div>
				
				<div id="logo">
					<h1><a href="<%= url_for '/' %>">Herr Tool Sales</a></h1>
					<p>Tooling and Metalworking Products</p>
				</div>
				<div id="menu">					
