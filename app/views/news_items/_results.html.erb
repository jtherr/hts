<table>
	<tr>
		<th>Date</th>
		<th>Description</th>
		
		<% if logged_in? %>
			<th class="icon"></th>
			<th class="icon"><span data-request-path="<%= url_for new_news_item_path %>" data-update="newsItemResults" data-object-name="News Item" class="add ui-icon ui-icon-plus" title="Add"></span></th>
		<% end %>
	</tr>
	
	<% @news_items.each do |item| %>					
		<tr>
			<td class="date"><%=item.date.to_date.to_formatted_s(:long_ordinal) %></td>
			<td><%=item.description %></td>
					
			<% if logged_in? %>
				<td class="icon">
					<span data-request-path="<%= url_for edit_news_item_path(:id => item.id) %>" data-update="newsItemResults" data-object-name="News Item" data-update="newsItemResults" class="edit ui-icon ui-icon-pencil" title="Edit"></span>
				</td>
				<td class="icon">
					<span data-request-path="<%= url_for news_item_path(:id => item.id) %>" data-update="newsItemResults" data-object-name="News Item" class="delete ui-icon ui-icon-trash" title="Delete"></span>
				</td>
			<% end %>
		</tr>
	<% end %>
</table>
		