<div id="content">
	<div class="post">
		<h2 class="title">Brands</h2>
		<div class="entry">
			<div id="box1">
				<h3 class="text1">Premier Linecard</h3>
				<p class="text2">This is a selection of our most popular brands. View all <a href="<%= url_for '/products' %>">products</a>.</p>

				<div id="two-columns">
					<div id="column1">									
						<ul class="style1">
							<% [0, 1, 2, 3, 4, 5].each do |brand| %>
								<li>
									<%= image_tag 'homepage06.jpg', :width => 90, :height => 90 %>
									<h3>Brand <%= brand %></h3>
								</li>
							<% end %>
						</ul>							
					</div>
					<div id="column2">
						<ul class="style1">
							<% [6, 7, 8, 9, 10].each do |brand| %>
								<li>
									<%= image_tag 'homepage06.jpg', :width => 90, :height => 90 %>
									<h3>Brand <%= brand %></h3>
								</li>
							<% end %>
						</ul>				
					</div>
				</div>					
			</div>	
		</div>
	</div>
</div>
